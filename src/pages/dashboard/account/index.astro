---
import { SubscriptionManager } from '@components/app/components/account/subscription-manager'
import NavBar from '@components/app/components/nav-bar/nav-bar'
import MainLayout from '@layouts/main-layout.astro'

const user = Astro.locals.user
---

<MainLayout title='Account Settings'>
  <NavBar
    transition:persist
    user={user}
    campaignSlug={undefined}
    client:load
  />
  <div class='container mx-auto py-8'>
    <div class='mx-auto max-w-4xl space-y-8'>
      <!-- Account Info -->
      <section>
        <h1 class='mb-6 text-3xl font-bold'>Account Settings</h1>

        <div class='grid gap-6 md:grid-cols-2'>
          <div class='space-y-4'>
            <div>
              <span class='text-sm font-medium'>Name</span>
              <p class='text-lg'>{user.name}</p>
            </div>
            <div>
              <span class='text-sm font-medium'>Email</span>
              <p class='text-lg'>{user.email}</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Subscription Management -->
      <section>
        <SubscriptionManager
          user={user}
          campaignSlug={undefined}
          client:load
        />
      </section>
    </div>
  </div>
</MainLayout>
