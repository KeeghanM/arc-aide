---
export const prerender = true

import Callout from '@components/marketing/Callout.astro'
import CTABanner from '@components/marketing/CTABanner.astro'
import FeatureBlock from '@components/marketing/FeatureBlock.astro'
import Hero from '@components/marketing/Hero.astro'
import MainLayout from '@layouts/main-layout.astro'
import {
  Cloud,
  Crown,
  Eye,
  Globe,
  Link,
  Play,
  Search,
  Wand2,
  Zap,
} from 'lucide-react'

const coreFeatures = [
  {
    title: 'Never Lose Track Again',
    description:
      'Stop digging through messy notes mid-session. Our six-part framework structures your stories so you can find any detail instantly and keep the adventure flowing.',
    icon: Search,
  },
  {
    title: 'Build Living Worlds',
    description:
      'Stop forgetting NPC relationships and plot connections. Link characters, locations, and storylines together so your world feels alive and consistent.',
    icon: Globe,
  },
  {
    title: 'Find Anything in Seconds',
    description:
      'Stop scrambling through notes when players ask about that NPC from three sessions ago. Our smart search finds any character, location, or plot point instantly.',
    icon: Zap,
  },
  {
    title: 'Reference Everything Seamlessly',
    description:
      'Stop breaking immersion to hunt for details. Type [[character name]] while writing and instantly link to any NPC, location, or plot element in your campaign.',
    icon: Link,
  },
  {
    title: 'Share Professional Content',
    description:
      'Stop embarrassing handouts and messy notes. Switch to view mode for clean, D&D-themed presentations that make your campaign look professionally crafted.',
    icon: Eye,
  },
  {
    title: 'Never Lose Your Work',
    description:
      'Stop losing hours of prep work to crashed browsers or forgotten saves. Everything saves automatically as you type, from any device, anywhere.',
    icon: Cloud,
  },
]

const arcFrameworkFeatures = [
  {
    title: 'Hook',
    description:
      "The opening scene or inciting incident that captures your players' attention and pulls them into the story.",
    link: '/landing/story-hooks',
  },
  {
    title: 'Protagonist',
    description:
      'The main characters or heroes of this particular story arc - usually your players or key allies.',
    link: '/landing/character-management',
  },
  {
    title: 'Antagonist',
    description:
      "The opposition, conflict source, or 'villain' that stands in the way of the protagonists' goals.",
    link: '/landing/villain-creation',
  },
  {
    title: 'Problem',
    description:
      'The central challenge or conflict that needs to be resolved to move the story forward.',
    link: '/landing/campaign-problems',
  },
  {
    title: 'Key',
    description:
      'The solution, tool, method, or insight needed to resolve the problem and overcome the challenge.',
    link: '/landing/plot-solutions',
  },
  {
    title: 'Outcome',
    description:
      "The resolution and consequences of the arc's events that set up future adventures.",
    link: '/landing/story-outcomes',
  },
]
---

<MainLayout
  title='ArcAide - The Ultimate D&D Campaign Management Tool for Dungeon Masters'
  showNav={true}
  seo={{
    description:
      'Professional campaign management for D&D Dungeon Masters. Organize NPCs, locations, and storylines with our proven arc framework. Never lose track of your campaign details again.',
  }}
>
  <div>
    <!-- Hero Section -->
    <Hero
      title='Stop Losing Campaign Details. Create Better D&D Stories.'
      description="Never forget an NPC's name or lose track of your storylines again. ArcAide's proven framework helps you organize compelling campaigns that keep your players engaged session after session."
      primaryCta={{ text: 'Start Your Campaign Free', href: '/auth/register/' }}
      secondaryCta={{ text: 'See How It Works', href: '#arc-framework' }}
      theme='fantasy'
      size='large'
    />

    <!-- Arc Framework Section -->
    <FeatureBlock
      title='The Arc Framework'
      description='Structure your stories with our proven six-part framework that creates compelling, player-driven narratives'
      features={arcFrameworkFeatures}
      layout='grid'
      columns={3}
      theme='fantasy'
      showNumbers={true}
    />

    <!-- Core Features Section -->
    <FeatureBlock
      title='Stop Campaign Chaos. Start Epic Adventures.'
      description='Turn scattered notes into organized campaigns that your players will remember for years'
      features={coreFeatures}
      layout='cards'
      columns={3}
      theme='default'
    />

    <!-- Professional DM Callout -->
    <div class='container mx-auto px-4 py-12'>
      <Callout
        title='Professional Campaign Management'
        description="Whether you're running your first campaign or you're a seasoned DM, ArcAide scales with your needs. From simple one-shots to complex multi-year campaigns with hundreds of NPCs."
        type='fantasy'
        icon={Crown}
        ctaText='Start Organizing Today'
        ctaLink='/auth/register/'
        size='large'
      />
    </div>

    <!-- Documentation CTA -->
    <section class='bg-card py-20'>
      <div class='container mx-auto px-4'>
        <div class='mb-16 text-center'>
          <h2 class='text-primary mb-4 text-3xl font-bold md:text-4xl'>
            Master Your Craft
          </h2>
          <p class='text-muted-foreground mx-auto max-w-2xl text-lg'>
            Get the most out of ArcAide with our comprehensive guides and learn
            advanced techniques
          </p>
        </div>

        <div class='mx-auto grid max-w-4xl grid-cols-1 gap-8 md:grid-cols-2'>
          <div
            class='bg-background border-border rounded-lg border p-8 text-center shadow-sm'
          >
            <div
              class='bg-primary/10 mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full'
            >
              <Play className='text-primary h-6 w-6' />
            </div>
            <h3 class='mb-4 text-xl font-semibold'>Getting Started Guide</h3>
            <p class='text-muted-foreground mb-6'>
              New to ArcAide? Learn the basics of campaign management and master
              the arc framework in minutes.
            </p>
            <a
              href='/documentation/user-guide/getting-started/'
              class='border-primary text-primary hover:bg-primary hover:text-primary-foreground inline-flex items-center justify-center rounded-md border bg-transparent px-6 py-3 text-sm font-medium transition-colors'
            >
              Start Learning
            </a>
          </div>

          <div
            class='bg-background border-border rounded-lg border p-8 text-center shadow-sm'
          >
            <div
              class='bg-primary/10 mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full'
            >
              <Wand2 className='text-primary h-6 w-6' />
            </div>
            <h3 class='mb-4 text-xl font-semibold'>Advanced Features</h3>
            <p class='text-muted-foreground mb-6'>
              Discover power user features like hierarchical arcs, internal
              linking, view modes, and advanced search.
            </p>
            <a
              href='/documentation/user-guide/advanced-features/'
              class='border-primary text-primary hover:bg-primary hover:text-primary-foreground inline-flex items-center justify-center rounded-md border bg-transparent px-6 py-3 text-sm font-medium transition-colors'
            >
              Explore Features
            </a>
          </div>
        </div>

        <div class='mt-12 text-center'>
          <p class='text-muted-foreground mb-4'>
            Want to explore all documentation?
          </p>
          <a
            href='/documentation/user-guide/getting-started/'
            class='bg-primary text-primary-foreground hover:bg-primary/90 inline-flex items-center justify-center rounded-md px-8 py-4 text-lg font-medium shadow transition-colors'
          >
            Browse All Docs
          </a>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <CTABanner
      title='Ready to Stop Campaign Chaos?'
      description="Join over 1,000 DMs who've transformed their scattered notes into organized, engaging campaigns that their players love."
      primaryCta={{
        text: 'Start Organizing Your Campaign Free',
        href: '/auth/register/',
      }}
      theme='fantasy'
      size='large'
      backgroundPattern={true}
    />
  </div>
</MainLayout>

<style>
  * {
    scroll-behavior: smooth;
  }
</style>
