---
export interface TestimonialProps {
  quote: string
  author: string
  role?: string
  avatar?: string
  company?: string
  rating?: number
}

export interface ReviewBlockProps {
  title?: string
  description?: string
  testimonials: TestimonialProps[]
  layout?: 'grid' | 'carousel' | 'single'
  theme?: 'default' | 'fantasy' | 'minimal'
  showRatings?: boolean
}

const {
  title,
  description,
  testimonials,
  layout = 'grid',
  theme = 'default',
  showRatings = true,
} = Astro.props as ReviewBlockProps

const themeClasses = {
  default: 'bg-primary/15',
  fantasy: 'bg-gradient-to-b from-orange-50 to-blue-50  ',
  minimal: 'bg-background',
}
---

<section class={`py-20 ${themeClasses[theme]}`}>
  <div class='container mx-auto px-4'>
    {
      (title || description) && (
        <div class='mb-16 text-center'>
          {title && (
            <h2 class='text-primary mb-4 text-3xl font-bold md:text-4xl'>
              {title}
            </h2>
          )}
          {description && (
            <p class='text-muted-foreground mx-auto max-w-3xl text-lg'>
              {description}
            </p>
          )}
        </div>
      )
    }

    {
      layout === 'grid' && (
        <div class='grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3'>
          {testimonials.map((testimonial) => (
            <div class='bg-card border-border rounded-lg border p-6 shadow-sm'>
              {showRatings && testimonial.rating && (
                <div class='mb-4 flex items-center'>
                  {Array.from({ length: 5 }, (_, i) => (
                    <svg
                      class={`h-5 w-5 ${i < (testimonial.rating ?? 0) ? 'text-yellow-400' : 'text-gray-300'}`}
                      fill='currentColor'
                      viewBox='0 0 20 20'
                    >
                      <path d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z' />
                    </svg>
                  ))}
                </div>
              )}

              <blockquote class='text-foreground mb-4 text-lg leading-relaxed italic'>
                "{testimonial.quote}"
              </blockquote>

              <div class='flex items-center'>
                {testimonial.avatar && (
                  <img
                    src={testimonial.avatar}
                    alt={testimonial.author}
                    class='mr-3 h-10 w-10 rounded-full object-cover'
                  />
                )}
                <div>
                  <div class='text-foreground font-semibold'>
                    {testimonial.author}
                  </div>
                  {(testimonial.role || testimonial.company) && (
                    <div class='text-muted-foreground text-sm'>
                      {testimonial.role}
                      {testimonial.role && testimonial.company && ', '}
                      {testimonial.company}
                    </div>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      )
    }

    {
      layout === 'single' && testimonials.length > 0 && (
        <div class='mx-auto max-w-4xl text-center'>
          <div class='bg-card border-border rounded-xl border p-12 shadow-sm'>
            {showRatings && testimonials[0].rating && (
              <div class='mb-6 flex items-center justify-center'>
                {Array.from({ length: 5 }, (_, i) => (
                  <svg
                    class={`h-6 w-6 ${i < (testimonials[0].rating ?? 0) ? 'text-yellow-400' : 'text-gray-300'}`}
                    fill='currentColor'
                    viewBox='0 0 20 20'
                  >
                    <path d='M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z' />
                  </svg>
                ))}
              </div>
            )}

            <blockquote class='text-foreground mb-8 text-2xl leading-relaxed italic md:text-3xl'>
              "{testimonials[0].quote}"
            </blockquote>

            <div class='flex items-center justify-center'>
              {testimonials[0].avatar && (
                <img
                  src={testimonials[0].avatar}
                  alt={testimonials[0].author}
                  class='mr-4 h-12 w-12 rounded-full object-cover'
                />
              )}
              <div class='text-left'>
                <div class='text-foreground text-lg font-semibold'>
                  {testimonials[0].author}
                </div>
                {(testimonials[0].role || testimonials[0].company) && (
                  <div class='text-muted-foreground'>
                    {testimonials[0].role}
                    {testimonials[0].role && testimonials[0].company && ', '}
                    {testimonials[0].company}
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>
      )
    }
  </div>
</section>
