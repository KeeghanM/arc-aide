# Site Configuration
SITE_URL="http://localhost:4321"
REVISION="development"

# Database Configuration
# For local development, use a local SQLite file
TURSO_DATABASE_URL="file:local.db"
TURSO_AUTH_TOKEN=""

# For production, use your Turso database URL and token
# TURSO_DATABASE_URL="libsql://your-database.turso.io"
# TURSO_AUTH_TOKEN="your-turso-auth-token"

# Authentication
# Generate a strong secret key (minimum 32 characters)
BETTER_AUTH_SECRET="your-very-long-and-random-secret-key-here"
BETTER_AUTH_URL="http://localhost:4321"

# Email Service (Optional - for password resets, etc.)
# Sign up at https://resend.com for API key
RESEND_API_KEY=""

# Error Monitoring (Optional but recommended for production)
# Sign up at https://www.honeybadger.io for API key
PUBLIC_HONEYBADGER_KEY=""

# Analytics (Optional)
# Sign up at https://posthog.com for API key
PUBLIC_POSTHOG_KEY=""
PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Kill Bill Configuration
# URL to your Kill Bill server
KILLBILL_URL="http://127.0.0.1:8080"
KILLBILL_USERNAME="admin"
KILLBILL_PASSWORD="password"
KILLBILL_API_KEY="bob"
KILLBILL_API_SECRET="lazar"

# Stripe Configuration
# Get these from your Stripe dashboard
PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."

# Development Notes:
# - Copy this file to .env and fill in your values
# - Never commit .env to version control
# - Generate BETTER_AUTH_SECRET with: openssl rand -base64 32
# - For local development, only BETTER_AUTH_SECRET is required